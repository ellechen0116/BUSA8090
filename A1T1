#!/bin/bash
# save as time-signal.sh
# gives a time signal every hour when connected to cron
time=$(date +%I)
count=1
while test $count -lt $time; do
  echo -e "\a"
  sleep 3  # sleep for three second
  count=$[$count+1]
done

^x
y
program24
y

./program24

